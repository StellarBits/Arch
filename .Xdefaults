!!xterm*background: #333
!!xterm*foreground: #8ae234
!!xterm*faceName: ~Dejavu Sans Mono~
!!xterm*facesize: 9
!!xterm*vt100.allowTitleOps: false

!-------------------------------------------------------------------------------
! URxvt settings
! Colours lifted from Solarized (http://ethanschoonover.com/solarized)
! More info at:
! http://pod.tst.eu/http://cvs.schmorp.de/rxvt-unicode/doc/rxvt.1.pod
!-------------------------------------------------------------------------------
URxvt.keysym.Control-Mod4-C: eval:selection_to_clipboard
URxvt.keysym.Control-Mod4-V: eval:paste_clipboard

URxvt.keysym.Control-Up:        \033[1;5A
URxvt.keysym.Control-Down:      \033[1;5B
URxvt.keysym.Control-Left:      \033[1;5D
URxvt.keysym.Control-Right:     \033[1;5C

!URxvt*dynamicColors:         on
URxvt.perl-ext-common:       default,resize-font
URxvt.keysym.C-minus:        resize-font:smaller
URxvt.keysym.C-plus:         resize-font:bigger
URxvt.keysym.C-equal:        resize-font:reset
URxvt.keysym.C-question:     resize-font:show
URxvt*saveLines:             65535
!Font settings
!URxvt.depth:                 32
URxvt.geometry:              90x30
!URxvt.transparent:           false
!URxvt.fading:                0

URxvt.loginShell:            true
URxvt.internalBorder:        3
URxvt.lineSpace:             0
! Fonts
URxvt.allow_bold:            true
/* URxvt.font:                 -*-terminus-medium-r-normal-*-12-120-72-72-c-60-iso8859-1 */
URxvt*font:              xft:monospace:size=12
URxvt*boldFont:          xft:monospace:size=12
!URxvt*font:                  xft:Fantasque Sans Mono NF:size=13
!URxvt*boldFont:              xft:Fantasque Sans Mono NF:size=13
! Fix font space
URxvt*letterSpace:           -1
! Scrollbar
URxvt.scrollStyle:           rxvt
URxvt.scrollBar:             false
! Cursor
URxvt.cursorBlink:           true
!URxvt.cursorColor:          #657b83
!URxvt.cursorColor:           #dc1315
URxvt.cursorUnderline:       false
! Set depth to make transparency work.
!URxvt*depth: 32
!URxvt*transparent: true
!URxvt*shading: 15

!URxvt*background: #333
!URxvt*foreground: #8ae234
!URxvt*font: xft:Dejavu Sans Mono:size=10
!URxvt*facesize: 9
!URxvt*vt100.allowTitleOps: false
!URxvt*transparent: true
!URxvt*shading: 15
